<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults public="false" />

        <service id="ems_form.form_client" class="EMS\FormBundle\Service\FormClient">
            <argument type="service" id="EMS\ClientHelperBundle\Helper\Elasticsearch\ClientRequest"/>
            <argument type="service" id="form.factory"/>
            <argument type="service" id="logger"/>
        </service>

        <!-- controllers -->
        <service id="ems_form.controller.form" class="EMS\FormBundle\Controller\FormController">
            <argument type="service" id="ems_form.form_client"/>
            <tag name="controller.service_arguments"/>
        </service>
    </services>
</container>